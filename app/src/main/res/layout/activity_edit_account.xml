<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".views.EditAccountActivity">

    <Button
        android:id="@+id/update_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="512dp"
        android:text="update account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_account_displayName"
        android:layout_width="321dp"
        android:layout_height="54dp"
        android:layout_marginVertical="30sp"
        android:hint="new display name"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/update_account_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

    <ImageButton
        android:id="@+id/update_account_upload_image_btn"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginBottom="520dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/upload_btn_image"
        android:src="@drawable/attach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_account_displayName"
        app:layout_constraintTop_toBottomOf="@+id/edit_account_displayName"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/Update_image_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_account_btn"
        app:srcCompat="@drawable/empty_image" />

</androidx.constraintlayout.widget.ConstraintLayout>